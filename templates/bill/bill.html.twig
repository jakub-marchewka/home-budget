{% extends 'panel.html.twig' %}

{% block content %}
    {% if app.user == app.user.currentProperty.owner %}
        <div class="row mt-5">
            <div class="col-sm-12 col-md-4">
                <button class="btn btn-primary addBillModalButton">Dodaj rachunek</button>
            </div>
        </div>
        <div class="modal fade" id="billModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Dodaj rachunek</h5>
                    </div>
                    <div class="modal-body">
                        {{ form_start(form) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.priceTotal) }}
                        {{ form_row(form.splitOn) }}
                        {{ form_row(form.type) }}
                        {{ form_row(form.archived) }}
                        <button type="button" class="btn btn-primary mt-3">Dodaj</button>
                        {{ form_end(form) }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary addBillModalCloseButton" data-dismiss="modal">Zamknij</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}