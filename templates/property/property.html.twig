{% extends 'panel.html.twig' %}

{% block content %}
    <div class="row mt-5 justify-content-between">
        <div class="col-sm-12 col-md-4">
            <button class="btn btn-primary addPropertyModalButton">Dodaj nieruchomość +</button>
        </div>
        <div class="col-sm-12 col-md-4">
            <a class="btn btn-primary"
               href="
                {% if app.user.currentProperty and app.user.currentProperty.owner == app.user %}
                    {{ path('app_property_tenant_owner')}}
                {% else %}
                    {{ path('app_property_tenant')}}
                {% endif %}"
            >
                Zaproszenia
            </a>
        </div>
    </div>
    <div class="property-table-wrapp">
        {% include 'property/propertyTable.html.twig' %}
    </div>
    <div class="modal fade" id="propertyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Dodaj nieruchomość</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <label for="name">Nazwa</label>
                            <input type="email" class="form-control" id="name">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <button type="button" class="btn btn-primary addPropertyModalAddButton" data-dismiss="modal">Dodaj</button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary addPropertyModalCloseButton" data-dismiss="modal">Zamknij</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}